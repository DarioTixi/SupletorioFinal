<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous"></script>

</head>
<body >
    <div style="background-color:  black" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" >
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                 @Html.ActionLink("Facturación", "Index", "Inicio", new { area = "" }, new { @class = "navbar-brand" })
</div>
            <div class="navbar-collapse collapse">
                <ul  class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Inicio" ? "active" : "")">@Html.ActionLink("Lista de Facturas", "Index", "Inicio")</li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Factura" ? "active" : "")">@Html.ActionLink("Facturar", "Facturar", "Factura")</li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Producto" ? "active" : "")">@Html.ActionLink("Productos", "Productos", "Producto")</li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Cliente" ? "active" : "")">@Html.ActionLink("Clientes", "Cliente", "Cliente")</li>
                    @if (@ViewBag.UsuarioAdm == "0")
                    {

                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Usuario" ? "active" : "")">@Html.ActionLink("Usuarios", "Usuario", "Usuario")</li>
                    }
                    <li>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Login")</li>
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:black">&copy; @DateTime.Now.Year - Universidad Técnica de Ambato - Dario Tixi</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
