@model FacturaWeb.Models.Factura
@{
    ViewBag.Title = "DetalleFactura";
}
@Styles.Render("~/Content/Site.css")
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card" style="margin-top: 20px;">
                <div class="card-body p-0">
                    <div class="row p-5">
                        
                        <div class="col-md-6 text-right">
                            <p id="FacturaID" class="font-weight-bold mb-1"></p>
                            <p id="Fecha" class="text-muted text-capitalize"></p>
                        </div>
                    </div>

                    <hr class="my-5">

                    <div class="row pb-5 p-5">
                        <div class="col-md-4">
                            <p class="font-weight-bold mb-4"><strong>Información del Cliente </strong> </p>
                            <p id="RUC" class="mb-1"><strong>Cédula:</strong>  @Model.Cedula</p>
                            <p id="CLIENTE" class="mb-1"><strong>Nombres/Apellidos:</strong>  @Model.Nombre  @Model.Apellido</p>
                            <p id="DIRECCION" class="mb-1"> <strong>Direccion:</strong> @Model.Direccion </p>
                            <p id="TELEFONO" class="mb-1"> <strong>Telefono:</strong> @Model.Telefono </p>
                            <p id="TELEFONO" class="mb-1"> <strong>Telefono:</strong> @Model.Fecha</p>

                        </div>
                        <div class="col-md-4">
                            <img  style="width:200px; height:150px ; opacity: 0.5 " src="~/Content/Img/Logo2.png">
                        </div>

                        <div class="col-md-4 text-left">
                            <p class="font-weight-bold mb-4"><strong> Información de la Empresa </strong></p>
                            <p class="mb-1"><span><strong>Numero de Factura:</strong> </span>@Model.Id_Venta</p>
                            <p class="mb-1"><span><strong>RUC:</strong> </span> 170000000001</p>
                            <p class="mb-1"><span><strong>Nombre:</strong> </span>Comercial Basantes</p>
                            <p class="mb-1"><span><strong>Dirección:</strong> </span> Isla Santiago, Quito 170138</p>
                            <p class="mb-1"><span><strong>Teléfono:</strong> </span> 0983475261</p>
                        </div>
                    </div>
                    <hr class="my-5">
                    <div class="row p-5">
                        <div class="col-md-12">
                            <table id="TablaFacturar" class="table table-striped">
                                <thead>
                                    <tr >

                                        <th class="border-0 text-uppercase small font-weight-bold colorcabecera">ID</th>
                                        <th class="border-0 text-uppercase small font-weight-bold colorcabecera">Producto</th>
                                        <th class="border-0 text-uppercase small font-weight-bold colorcabecera">Cantidad</th>
                                        <th class="border-0 text-uppercase small font-weight-bold colorcabecera">Precio U.</th>
                                        <th class="border-0 text-uppercase small font-weight-bold colorcabecera">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model.Productos)
                                        {
                                            <tr>
                                                <td> @item.Num </td>
                                                <td> @item.NomProducto </td>
                                                <td> @item.Cantidad </td>
                                                <td> @item.Precio </td>
                                                <td> @item.Total </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="d-flex flex-row-reverse bg-dark text-white p-4">

                        <div class="row">
                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <div class="py-3 px-5 text-right">
                                    <div class="mb-2"><strong> SubTotal </strong> </div>
                                    <div class="h4 font-weight-light">$ @Model.Subtotal</div>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <div class="py-3 px-5 text-right">
                                    <div class="mb-2"><strong> IVA</strong> </div>
                                    <div class="h4 font-weight-light">$ @Model.Iva</div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-4 col-lg-4 mb-2">
                                <div class="py-3 px-5 text-right">
                                    <div class="mb-2"> <strong> Total </strong> </div>
                                    <div class="h4 font-weight-light">$ @Model.Total</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-5">
                    <div class="d-flex text-white p-4 ">
                        <div class="py-3 px-5 text-center">
                            <button class="btn btn-danger" onclick="Regresar()"> Regresar</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>




<script type="text/javascript">
    function Regresar() {
        window.location.href = '@Url.Action("Index", "Inicio")'
    }


</script>

